<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:id="@+id/idLayoutItemComida">

    <TextView
        android:id="@+id/cantidadItemComida"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:text="aaa"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:background="@color/botonesInferiores"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/nombreItem"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="comida"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/cantidadItemComida"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:textSize="30sp"/>


    <TextView
        android:id="@+id/comidaPrecioItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:layout_toRightOf="@id/nombreItem"
        android:textSize="20sp"
        android:text="0.0"/>

</RelativeLayout>